{
  "name": "Bit Chrome",
  "version": "1.1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "author": "ReeganExE",
  "permissions": [
    "storage",
    "https://api.coinmarketcap.com/*"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": {
      "19": "icon.png",
      "38": "icon.png"
    },
    "default_title": "Bit Chrome"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}