{
  "extends": "airbnb-base",
  "env": {
    "browser": true
  },
  "globals": {
    "chrome": true
  },
  "rules": {
    "semi": ["error", "always"],
    "space-before-function-paren": "off",
    "comma-dangle": ["error", "never"],
    "no-use-before-define": ["error", { "functions": false, "classes": false }],
    "max-len": ["error", { "code": 150 }],
    "no-shadow": "off",
    "arrow-parens": "off"
  }
}